generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model realms {
  id           Int          @id @default(autoincrement()) @db.UnsignedInt
  fk_region_id Int          @db.UnsignedInt
  name         String       @db.VarChar(255)
  slug         String?      @db.VarChar(255)
  realm_id     Int?         @unique(map: "realms_uk_realm_id") @db.UnsignedInt
  characters   characters[]
  regions      regions      @relation(fields: [fk_region_id], references: [id], onDelete: Cascade, onUpdate: Restrict, map: "realms_regions_FK")

  @@unique([fk_region_id, name], map: "realms_uk_name")
  @@unique([fk_region_id, slug], map: "realms_uk_slug")
}

model regions {
  id     Int      @id @default(autoincrement()) @db.UnsignedInt
  name   String   @unique(map: "regions_uk_name") @db.VarChar(3)
  realms realms[]
}

model characters {
  id          Int       @id @default(autoincrement()) @db.UnsignedInt
  name        String?   @db.VarChar(12)
  fk_realm_id Int       @db.UnsignedInt
  update_time DateTime? @default(now()) @db.DateTime(0)
  realms      realms    @relation(fields: [fk_realm_id], references: [id], onDelete: Cascade, onUpdate: Restrict, map: "characters_realms_FK")

  @@index([fk_realm_id], map: "characters_realms_FK")
}
